#
# HTML Nginx's server configuration
#

server {
<% if $args['listen_port'] { -%>
	listen <%= $args['listen_port'] %>;
<% } -%>
<% elsif empty($args['listen_port']) { -%>
	listen 80;
<% } -%>
	root <%= $args['root_dir'] %>;
	server_name <%= $args['server_name'] %>;
    
	location / { 
        		index index.html index.htm;
    			}
}
